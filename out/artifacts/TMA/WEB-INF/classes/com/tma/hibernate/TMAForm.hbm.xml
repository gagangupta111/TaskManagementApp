<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.taskmanagementapp.model.TMAModel" table="TMA" catalog="tmadatabase">
        <id name="taskID" type="long">
            <column name="taskID" />
            <generator class="identity" />
        </id>

        <property name="taskName" type="string">
            <column name="taskName" length="250" not-null="true" />
        </property>

        <property name="taskEndDate" type="timestamp">
            <column name="taskEndDate" length="19" not-null="true" />
        </property>

        <property name="Desc" type="string">
            <column name="Desc" length="250" not-null="true" />
        </property>

        <property name="createdBy" type="string">
            <column name="createdBy" length="250" not-null="true" />
        </property>

        <property name="creationTimeStamp" type="timestamp">
            <column name="creationTimeStamp" length="19" not-null="true" />
        </property>

    </class>

</hibernate-mapping>
